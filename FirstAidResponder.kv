#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition(duration=0.2)
    LoadingPage:
    HomeMenu:
    FirstAidMenu1:
    FirstAidMenu2:
    CameraMenu:
    BruisePage:
    AbrasionPage:
    BurnPage:
    MinorWoundPage:
    BleedingPage:
    SprainPage:
    MappingMenu:

<LoadingPage>:
    name: 'loadingpage'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'ui_images/MobileAppBG.png'
    
    Image:
        id: loading_image
        size_hint: 0.2, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.3} #Image of gif not showing
        source: 'Loading.gif'  # use a loading animation gif                    

<HomeMenu>:
    name: 'homemenu'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'ui_images/BG MAIN.png' 
        
    FloatLayout:
        Button:
            size_hint: 0.195, 0.07
            pos_hint: {'x': 0.05,'y': 0.0045}
            background_normal: 'ui_images/HomeMenu2.png' 
            background_down: 'ui_images/HomeMenu2.png'    
            on_release: app.root.current = 'homemenu'
    
        Button:
            size_hint: 0.195, 0.07
            pos_hint: {'x': 0.27,'y': 0.0045}
            background_normal: 'ui_images/CameraMenu1.png' 
            background_down: 'ui_images/CameraMenu1.png'    
            on_release: app.root.current = 'cameramenu'
    
        Button:
            size_hint: 0.195, 0.07
            pos_hint: {'x': 0.5,'y': 0.0045}
            background_normal: 'ui_images/FirstAidMenu1.png'
            background_down: 'ui_images/FirstAidMenu1.png'    
            on_release: app.root.current = 'firstaidmenu1'
    
        Button:
            size_hint: 0.195, 0.07
            pos_hint: {'x': 0.75,'y': 0.0045}
            background_normal: 'ui_images/MappingMenu1.png' 
            background_down: 'ui_images/MappingMenu1.png'    
            on_release: app.root.current = 'mappingmenu'
        
        Image:
            size_hint: 0.90, 0.2
            pos_hint: {'center_x': 0.5,'center_y': 0.82}
            source: 'text_images/HomeText.png'      
        
        Image:
            id: clock_image
            size_hint: 0.90, 0.16
            pos_hint: {'center_x': 0.5,'center_y': 0.69} 
            source: 'ui_images/ClockBox.png' 

        Label:
            id: clock_label
            size_hint: 0.90, 0.16
            pos_hint: {'center_x': 0.5,'center_y': 0.69}
            font_size: 45
            font_name: 'josefin-sans.bold.ttf'
            color: (1, 1, 1)

        Image:
            size_hint: 0.90, 0.35
            pos_hint: {'center_x': 0.5,'center_y': 0.46} #Change the Calendar
            source: 'calendar_images/October.png' 
        
        Image:
            size_hint: 0.90, 0.2
            pos_hint: {'center_x': 0.5,'center_y': 0.2}
            source: 'text_images/Hotlines.png' 
        

