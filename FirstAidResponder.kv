<LoadingPage>:
    name: 'loadingpage'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'MobileAppBG.png'
    
    FloatLayout: #Temporary for now
        Button:
            text: 'START'
            size_hint:0.45, 0.075
            pos_hint: {"x":0.260,"y":0.30}
            text_size: self.width, None
            font_size: 28
            font_name: 'josefin-sans.bold.ttf'
            color: (1, 1, 1)
            background_color:(1, 0, 0, 1)
            halign: 'center'
            valign: 'center'
            on_release:
                app.root.current = 'homemenu'  
            on_press: 
                root.manager.transition = FadeTransition () #TRANSITION TO ALL THE SCREENS

