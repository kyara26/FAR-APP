<CameraMenu>:
    name: 'cameramenu'
    canvas.before:
    BoxLayout:
        orientation: 'vertical'
        
        Button:
            on_release:app.root.current = 'CameraMenu'
            size_hint: .3, .5
            pos_hint: {"x":0.15,"y":0.15}
            background_normal:'CameraMenu.png'
            background_down:'CameraMenu.png'


        Label:
            text:'1. Where is Mt. Everest Located?'
            text_size: 0.175,0.09
            size_hint: 1, None
            height: self.texture_size[1]
            font_size:self.width/15
            color: 0,0,0
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
            
        Button:
            text: 'a. Nepal'
            text_size: self.width, None
            font_size:self.width/15
            color: (1,1,0)
            on_release:self.background_color = (0,255,0)
            on_release:self.color = (0,0,0)
        Button:
            text: 'b. India'
            text_size: self.width, None
            font_size:self.width/15
            color: (1,1,0)
            on_release:self.background_color = (255,0,0)
        Button:
            text: 'c. SriLanka'
            text_size: self.width, None
            font_size:self.width/15
            color: (1,1,0)
            on_release:self.background_color = (255,0,0)
        Button:
            text: 'd. Japan'
            text_size: self.width, None
            font_size:self.width/15
            color: (1,1,0)
            on_release:self.background_color = (255,0,0)
        AnchorLayout:
            anchor_y:'bottom'
            BoxLayout:
                Button:
                    on_release:app.root.current = 'home'
                    background_normal:'backbtn.png'
                    background_down:'backbtn.png'
                Button:
                    on_release:app.root.current = 'q2'
                    background_normal:'nextbtn.png'
                    background_down:'nextbtn.png'

