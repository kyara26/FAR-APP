#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    LoadingPage:
    HomeMenu:
    CameraMenu:
    FirstAidMenu:
    Q3:
    FinalPage:

<LoadingPage>:
    name: 'loadingpage'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'MobileAppBG.png'
    
    FloatLayout:
        Button:
            text: 'Start'
            size_hint:0.45, 0.075
            pos_hint: {"x":0.260,"y":0.30}
            text_size: self.width, None
            font_size:self.width/8
            font_name: 'josefin-sans.bold.ttf'
            color: (1, 1, 1)
            background_color:(1, 0, 0, 1)
            halign: 'center'
            valign: 'center'
            on_release:
                app.root.current = 'homemenu'    
            on_press: 
                root.manager.transition = FadeTransition () #TRANSITION TO ALL THE SCREENS

<HomeMenu>:
    name: 'homemenu'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'BG MAIN.png'
            
            AnchorLayout:
                anchor_y:'bottom'
            
                Button:
                    background_normal:'CameraMenu.png'
                    background_down:'CameraMenu.png'
                    on_release:app.root.current = 'cameraMenu' #You stop here, ayaw pa din lumabas yung sa image ng camera button
